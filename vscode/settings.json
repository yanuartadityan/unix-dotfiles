{
  "workbench.iconTheme": "helium-icon-theme",
  "editor.tabSize": 2,
  // "cmake.buildDirectory": "${userHome}/Workspace/builds/${workspaceRootFolderName}/${variant:customer}/${buildType}",
  "cmake.configureOnOpen": true,
  "editor.minimap.maxColumn": 80,
  "[python]": {
    "editor.formatOnType": true
  },
  "discord.removeRemoteRepository": true,
  "discord.removeLowerDetails": true,
  "files.associations": {
    "*.py": "python"
  },
  "todohighlight.isEnable": true,
  "editor.fontFamily": "'JetBrainsSansMono Nerd Font', 'monospace', monospace",
  "editor.fontLigatures": false,
  "gitlens.autolinks": [
    {
      "prefix": "TC-",
      "url": "https://track.smarteye.se/youtrack/issue/TC-<num>"
    },
    {
      "prefix": "DMF-",
      "url": "https://track.smarteye.se/youtrack/issue/DMF-<num>"
    }
  ],
  "vim.easymotion": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "n"
      ],
      "commands": [
        ":nohl"
      ]
    }
  ],
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-h>": false,
    "<C-a>": false,
    "<C-w>": false,
    "<C-d>": true,
    "<C-s>": false,
    "<C-z>": false,
    "<C-j>": false,
    "<C-b>": false,
    "<C-k>": false,
    "<C-S-E>": false,
    "<C-S-D>": false
  },
  "vim.smartRelativeLine": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "underline-thin",
  "workbench.colorTheme": "Xcode Partial (Dark)",
  "glassit.alpha": 255,
  "window.menuBarVisibility": "toggle",
  "markdown-preview-enhanced.previewTheme": "one-dark.css",
  "python.formatting.provider": "black",
  "window.titleBarStyle": "custom",
  "editor.lineNumbers": "relative",
  "[yaml]": {
    "editor.autoIndent": "advanced"
  },
  "editor.formatOnSave": true,
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1,
  "indentRainbow.colors": [
    "rgba(255,255,64,0.3)",
    "rgba(127,255,127,0.3)",
    "rgba(255,127,255,0.3)",
    "rgba(79,236,236,0.3)"
  ],
  "workbench.tree.indent": 10,
  "workbench.colorCustomizations": {
    "editorIndentGuide.activeBackground": "#00AFFF",
    "tree.indentGuidesStroke": "#00AFFF",
    "tree.inactiveIndentGuidesStroke": "#4D4D4D"
  }
}
